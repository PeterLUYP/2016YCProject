<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.jiarou.sharelove.Game_areaFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="選擇縣市"
            android:id="@+id/textView18"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/spinner5"/>

        <Spinner
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_below="@+id/textView18"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="141dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="選擇地區"
            android:id="@+id/textView19"
            android:layout_below="@+id/spinner5"
            android:layout_alignEnd="@+id/spinner5"/>

        <Spinner
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/area"
            android:layout_below="@+id/textView19"
            android:layout_alignEnd="@+id/spinner5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="選擇想要的種類"
            android:id="@+id/textView20"
            android:layout_below="@+id/spinner6"
            android:layout_centerHorizontal="true"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner7"
            android:layout_below="@+id/textView20"
            android:layout_toStartOf="@+id/textView20"
            android:layout_alignEnd="@+id/textView20"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開始遊戲"
            android:id="@+id/start"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</FrameLayout>
