<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.jiarou.sharelove.UserFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|top"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:id="@+id/photo"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="right">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:weightSum="1"
                  >
                    
                    <ViewSwitcher
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/my_switcher1">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/relative1">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="暱稱"
                                android:id="@+id/name"
                                android:layout_marginLeft="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="修改"
                                android:id="@+id/change_name_btn"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/relative2">
                            <EditText
                                android:id="@+id/hidden_edit_view"
                                android:hint="輸入新暱稱"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true">
                            </EditText>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="完成"
                                android:id="@+id/finish_name_btn"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </ViewSwitcher>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="愛心點數:"
                        android:id="@+id/textView24"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/owned_point"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店家收藏"
                    android:id="@+id/collect_store_btn"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="樂透"
            android:id="@+id/lottery_btn"
            android:layout_weight="0.30"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="優惠券"
            android:id="@+id/coupon_btn"
            android:layout_weight="0.30"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="可使用優惠券"
            android:id="@+id/owned_coupon_btn"
            android:layout_weight="0.30"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="新增店家"
            android:id="@+id/add_vendor_btn"
            android:layout_weight="0.30"/>

    </LinearLayout>
</FrameLayout>
