<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/listImageView"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coupon_name"
        android:textSize="10dp"
        android:text="Test1"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="false"
        android:layout_alignTop="@+id/use_btn"
        android:layout_toLeftOf="@+id/use_btn"
        android:layout_toRightOf="@+id/listImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2017-09-26"
        android:id="@+id/due_date"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="可使用至"
        android:layout_alignBottom="@+id/listImageView"
        android:layout_toEndOf="@+id/listImageView"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用"
        android:id="@+id/use_btn"
        android:layout_above="@+id/due_date"
        android:layout_toRightOf="@+id/due_date"
        android:layout_toEndOf="@+id/due_date" />

</RelativeLayout>