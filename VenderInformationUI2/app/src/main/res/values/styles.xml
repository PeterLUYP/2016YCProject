<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/VenderInformationAactionBar</item>

        <item name="actionBarStyle">@style/VenderInformationAactionBar</item>
    </style>

    <style name="VenderInformationAactionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorVenderTheme</item>
        <item name="android:titleTextStyle">@style/VenderInformationAactionBar.TitleTextStyle</item>

        <item name="background">@color/colorVenderTheme</item>
        <item name="titleTextStyle">@style/VenderInformationAactionBar.TitleTextStyle</item>
    </style>

    <style name="VenderInformationAactionBar.TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorActioBar</item>
    </style>

</resources>
